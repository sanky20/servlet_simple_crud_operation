<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>

	<!-- configuration for register controller -->

	<servlet>
		<servlet-class>com.tcs.servlet_simple_crud_operation.controller.UserInsertController</servlet-class>
		<servlet-name>register</servlet-name>
	</servlet>

	<servlet-mapping>
		<servlet-name>register</servlet-name>
		<url-pattern>/userRegister</url-pattern>
	</servlet-mapping>


	<!-- configuration for login controller -->
	
	<servlet>
		<servlet-class>com.tcs.servlet_simple_crud_operation.controller.UserLoginController</servlet-class>
		<servlet-name>login</servlet-name>
	</servlet>

	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/loginUser</url-pattern>
	</servlet-mapping>


</web-app>
